<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="assure" pattern="/">
        <default key="_controller">GSBPatientsBundle:Assure:index</default>
    </route>

    <route id="assure_show" pattern="/{id}/show">
        <default key="_controller">GSBPatientsBundle:Assure:show</default>
    </route>

    <route id="assure_new" pattern="/new">
        <default key="_controller">GSBPatientsBundle:Assure:new</default>
    </route>

    <route id="assure_create" pattern="/create">
        <default key="_controller">GSBPatientsBundle:Assure:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="assure_edit" pattern="/{id}/edit">
        <default key="_controller">GSBPatientsBundle:Assure:edit</default>
    </route>

    <route id="assure_update" pattern="/{id}/update">
        <default key="_controller">GSBPatientsBundle:Assure:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="assure_delete" pattern="/{id}/delete">
        <default key="_controller">GSBPatientsBundle:Assure:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>

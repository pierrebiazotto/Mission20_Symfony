<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="lettrecle" pattern="/">
        <default key="_controller">GSBPatientsBundle:Lettrecle:index</default>
    </route>

    <route id="lettrecle_show" pattern="/{id}/show">
        <default key="_controller">GSBPatientsBundle:Lettrecle:show</default>
    </route>

    <route id="lettrecle_new" pattern="/new">
        <default key="_controller">GSBPatientsBundle:Lettrecle:new</default>
    </route>

    <route id="lettrecle_create" pattern="/create">
        <default key="_controller">GSBPatientsBundle:Lettrecle:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="lettrecle_edit" pattern="/{id}/edit">
        <default key="_controller">GSBPatientsBundle:Lettrecle:edit</default>
    </route>

    <route id="lettrecle_update" pattern="/{id}/update">
        <default key="_controller">GSBPatientsBundle:Lettrecle:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="lettrecle_delete" pattern="/{id}/delete">
        <default key="_controller">GSBPatientsBundle:Lettrecle:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Demande d'entente</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Numéro de dossier : </th>
                <td>{{ entity.numdossier }}</td>
            </tr>
            <tr>
                <th>Date de demande : </th>
                <td>{{ entity.datedemande }}</td>
            </tr>
            <tr>
                <th>Date de fin : </th>
                <td>{{ entity.datefin }}</td>
            </tr>
            <tr>
                <th>Réponse : </th>
                <td>{{ entity.reponse }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <form action="{{ path('demandeentente')}}" method="post">
            <input type="submit" value="Retour à la liste" />
            </form>
        </li>
        <li>
            <form action="{{ path('demandeentente_edit', { 'id': entity.id }) }}" method="post">
            <input type="submit" value="Editer" />
            </form>        
        </li>
    <li>
        {{ form(delete_form) }}
    </li>
</ul>
{% endblock %}

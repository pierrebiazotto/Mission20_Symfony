               <td class= "center space">{{ entities.motifadmission }}</td>
               <td class= "center space">{% if entities.datesortie %}{{ entities.datesortie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
               <td class= "center space">{{ entities.numpersonnepatient.nompersonne }}</td>
               <td>
                <ul>
                    <li>
                        <a href="{{ path('dossier_show', { 'id': entities.id }) }}">Montrer</a>
                    </li>
                </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>


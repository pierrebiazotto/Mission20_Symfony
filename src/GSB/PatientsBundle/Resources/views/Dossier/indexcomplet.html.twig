<hr>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date entree</th>
                <th>Motif admission</th>
                <th>Date sortie</th>
                <th>Patient</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>

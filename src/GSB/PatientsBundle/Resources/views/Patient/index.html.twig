{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Patient list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Ruepatient</th>
                <th>Villepatient</th>
                <th>Codepostalpatient</th>
                <th>Datenaissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('patient_show', { 'id': entity.id }) }}">{{ entity.ruepatient }}</a></td>
                <td>{{ entity.villepatient }}</td>
                <td>{{ entity.codepostalpatient }}</td>
                <td>{% if entity.datenaissance %}{{ entity.datenaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('patient_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('patient_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('patient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
